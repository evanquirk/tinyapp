<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
        <% if (user) { %>
          <p>Logged in as: <%= user.email %>!</p>
          <form action="/logout" method="POST" style="justify-content" >
            <button type="submit" class="btn btn-outline-dark">Logout</button>
          </form>
        <% } else { %>
          <form action="/login" method="POST" style="justify-content">
            <input type="text" name="email" placeholder="email" style="margin: 1em">
            <input type="password" name="password" placeholder="password" style="margin: 1em">
            <button type="submit" class="btn btn-outline-dark">Login</button>
          </form>
          <form action="/register" method="GET" style="justify-content: center">
          <button type="submit" class="btn btn-outline-dark">Register</button>
          </form>
        <% } %>

  </nav>
</header>